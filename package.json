{
  "name": "@syntest/framework",
  "version": "0.2.0",
  "description": "The common core of the SynTest Framework",
  "keywords": [
    "syntest",
    "automatic-test-generation"
  ],
  "homepage": "https://www.syntest.org",
  "bugs": {
    "url": "https://github.com/syntest-framework/syntest-framework/issues"
  },
  "license": "Apache-2.0",
  "contributors": [
    "Annibale Panichella",
    "Mitchell Olsthoorn",
    "Dimitri Stallenberg"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/NOTICE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syntest-framework/syntest-framework.git"
  },
  "scripts": {
    "build": "npm run build:compile",
    "build:compile": "tsc --build",
    "build:watch": "tsc --build --watch",
    "clean": "rm -rf .nyc_output dist node_modules",
    "clean:dist": "rm -rf dist",
    "docs": "jsdoc -r dist",
    "format": "prettier --config .prettierrc.json --ignore-path .prettierignore --write .",
    "format:check": "prettier --config .prettierrc.json --ignore-path .prettierignore --check .",
    "lint": "eslint --ignore-path .eslintignore .",
    "lint:fix": "eslint --ignore-path .eslintignore . --fix",
    "prepare": "npm run build",
    "test": "mocha --config .mocharc.json",
    "test:coverage": "nyc mocha --config .mocharc.json",
    "test:watch": "mocha --config .mocharc.json --watch"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.1.4",
    "bignumber.js": "9.0.1",
    "chalk": "^4.1.1",
    "clear": "^0.1.0",
    "cli-progress": "^3.9.0",
    "d3": "^4.13.0",
    "fast-csv": "^4.3.6",
    "figlet": "^1.5.0",
    "globby": "^11.0.4",
    "jsdom": "^16.6.0",
    "seedrandom": "^3.0.5",
    "shelljs": "^0.8.4",
    "winston": "^3.3.3",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/cli-progress": "^3.9.2",
    "@types/mocha": "^8.2.2",
    "@types/node": "^18.7.8",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "chai": "^4.3.4",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "jsdoc": "^3.6.7",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.8.1",
    "sinon": "^9.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=10.24.0"
  }
}

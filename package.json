{
  "name": "@syntest/core",
  "version": "0.2.0",
  "description": "The common core of the SynTest Framework",
  "keywords": [
    "syntest",
    "automatic-test-generation"
  ],
  "homepage": "https://www.syntest.org",
  "bugs": {
    "url": "https://github.com/syntest-framework/syntest-core/issues"
  },
  "license": "Apache-2.0",
  "contributors": [
    "Annibale Panichella",
    "Mitchell Olsthoorn",
    "Dimitri Stallenberg"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "/NOTICE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syntest-framework/syntest-core.git"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "lerna:build:compile": "lerna run build:compile",
    "lerna:build:watch": "lerna run build:watch",
    "lerna:clean": "lerna run --parallel clean",
    "lerna:clean:dist": "lerna run --parallel clean:dist",
    "lerna:format": "lerna run --parallel format",
    "lerna:format:check": "lerna run --parallel format:check",
    "lerna:lint": "lerna run --parallel lint",
    "lerna:lint:fix": "lerna run --parallel lint:fix",
    "lerna:test": "lerna run --parallel test",
    "lerna:test:coverage": "lerna run --parallel test:coverage",
    "lerna:test:watch": "lerna run --parallel test:watch",
    "postinstall": "husky install & lerna bootstrap --force-local"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@types/chai": "4.3.4",
    "@types/cli-progress": "3.11.0",
    "@types/mocha": "10.0.1",
    "@types/node": "18.11.18",
    "@types/sinon": "10.0.13",
    "@types/yargs": "17.0.20",
    "@typescript-eslint/eslint-plugin": "5.45.1",
    "@typescript-eslint/parser": "5.45.1",
    "chai": "4.3.7",
    "commitlint": "17.4.2",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "8.0.3",
    "lerna": "6.4.1",
    "lint-staged": "13.1.0",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "prettier": "2.8.1",
    "sinon": "15.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=10.24.0"
  },
  "lint-staged": {
    "**/*": [
      "prettier --config .prettierrc.json --ignore-path .prettierignore --write .",
      "eslint --config .eslintrc.json --ignore-path .eslintignore . --fix"
    ]
  }
}
